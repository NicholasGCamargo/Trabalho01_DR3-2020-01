<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeletarEditarActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome Abaixo" />

    <EditText
        android:id="@+id/editarNomeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email abaixo" />

    <EditText
        android:id="@+id/editarEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email..."
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Numero abaixo" />

    <EditText
        android:id="@+id/editarNumeroEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Numero..."
        android:inputType="number" />

    <Button
        android:id="@+id/btnDeletarContato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deletar este contato" />

    <Button
        android:id="@+id/btnEditarInfos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar informações" />

    <Button
        android:id="@+id/btnVoltarEditarDeletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar" />

</LinearLayout>